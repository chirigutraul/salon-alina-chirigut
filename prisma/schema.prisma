generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Servname {
  manichiura_constructie_gel
  manichiura_semipermanenta
  pedichiura_semipermanent
  stilizare_cuticula
  demontare_unghii
  intretinere_gel
  intretinere_semipermanent
}

enum AppointmentStatus {
  pending
  approved
  rejected
}

model Client {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String   
  phone     String?
  picture   String?
  email     String
}

model Service {
  id        Int      @id @default(autoincrement())
  name      Servname 
  price     Int?     
  duration  String? 
  description  String?
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime 
  time      DateTime
  rejectionDetails String
  status    AppointmentStatus 
  createdAt DateTime @default(now())
}

